<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFrameworks>netstandard2.0;net6.0;net9.0</TargetFrameworks>
	  <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	  <PackageId>Pro.Tafqeet.Arabic</PackageId>
	  <Version>1.0.0</Version>
	  <Authors>Ahmed Mansour</Authors>
	  <Description>Arabic number to text converter with currency support and correct grammar</Description>
	  <PackageTags>arabic;number-to-text;tafqeet;currency;dotnet</PackageTags>
	  <RepositoryUrl>https://github.com/proahmedmansour/Pro.Tafqeet.Arabic</RepositoryUrl>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="" />
	</ItemGroup>
	
  <ItemGroup>
    <PackageReference Include="Humanizer.Core.ar" Version="2.14.1" />
  </ItemGroup>

</Project>
